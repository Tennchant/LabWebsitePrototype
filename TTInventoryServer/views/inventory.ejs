<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    
    <style>
        .material-symbols-outlined {
          font-variation-settings:
          'FILL' 0,
          'wght' 400,
          'GRAD' 0,
          'opsz' 48
        }
        </style>
    <title>Inventory</title>
    <link href="style.css" rel="stylesheet">
</head>
<body>

    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">Table Tennis Inventory</a> 
            <a href="#" class="sidenav-trigger"><i class="material-icons left">menu</i></a>
            <ul class="right">
                <li><a href="index.html"><i class="material-icons left">home</i>Home</a></li>
                <li><a href="inventory.html"><i class="material-symbols-outlined">density_small</i>  Inventory</a></li>
            </ul>
        </div>
    </nav>


    <div class="center-align">
        <h1>Inventory!</h1>
    </div>

    <div class="section" id="add">
        <h2>Add an item:</h2>
        <form id="addForm" method="post" action="/inventory"> <!-- default action is the page's URL --> 
            <div class="row">
                <div class="input-field col s8">
                    <input type="text" id="nameInput" name="item_name" class="validate" data-length="32" required>
                    <label for="nameInput">Item name:</label>
                </div>

                <div class="input-field col s6">
                    <select id="brandInput" name="item_brand" required>
                        <option value="" disabled selected>Choose the brand</option>
                        <option value=1>Butterfly</option>
                        <option value=2>Joola</option>
                        <option value=3>Stiga</option>
                        <option value=4>Tibhar</option>
                        <option value=5>Killerspin</option>
                        <option value=6>Other</option>
                    </select>
                    <label for="brandInput">Brand:</label>
                </div>
            </div>

            <div class="row">
                
                <div class="input-field col s4">
                    <input type="number" id="countInput" name="item_count" class="validate" min=1 max=40 value=10>
                    <label for="priorityInput">Item Count</label>
                </div>

                <div class="input-field col s6">
                    <input type="text" id="descInput" name="item_desc" class="validate" data-length="50" required>
                    <label for="descInput">Description</label>
                </div>

            </div>
            <button class="btn waves-effect waves-light" type="submit">
                <i class="material-icons right">send</i>
                Submit
            </button>
        </form>
    </div>
</div>

    <div class="container">
        <table class="center-align">

            <thead>
                <tr>
                    <th>Item</th>
                    <th>Brand</th>
                    <th>Number</th>
                </tr>
            </thead>

            <tbody>
                <% for (let i = 0; i < itemList.length; i++) { %>
                    <tr>
                        <td><%= itemList[i].item_name %></td>
                        <td><%= itemList[i].item_brand %></td>
                        <td><%= itemList[i].item_count %></td>
                        <td><%= itemList[i].item_desc %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href="/inventory/detail/<%=itemList[i].item_id%>">
                                <i class="material-icons right">edit</i>
                                Info/Edit
                            </a>

                            <a class="btn-small waves-effect waves-light red" href="/inventory/detail/<%=itemList[i].item_id%>/delete">
                                <i class="material-icons right">delete</i>
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        
    <script>M.AutoInit();</script>
</body>
</html>